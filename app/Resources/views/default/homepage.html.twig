{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        window.startingProducts = [
            'Sheer Shears',
            'Wool Hauling Basket',
            'After-Shear (Fresh Cut Grass)',
            'After-Shear (Morning Dew)',
            'Shear Comb',
            'Shearly Conditioned'
        ];
    </script>

    <script src="{{ asset('webpack-dev-server.js') }}"></script>
    <script src="{{ asset('builds/product.js') }}"></script>
{% endblock %}

{% block body %}
<div class="hero-space">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="hero-space-headline">Artisinal Shearing for the Dapper Sheep</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                <h2 class="hero-space-text">Before</h2>
                <img class="center-block" src="{{ asset('uploads/before.png') }}"/>
            </div>
            <div class="col-xs-6">
                <h2 class="hero-space-text">After</h2>
                <img class="center-block" src="{{ asset('uploads/after.png') }}"/>
            </div>
        </div>
    </div>
</div>

<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div id="product-app"></div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
